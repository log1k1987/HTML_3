extends ../auth.layout.pug

block content
    .auth-block
        .auth-block__content
            a(href='#').btn.intro__btn-auth Авторизоваться
            .auth-block__user
                .user.user_color_grey
                    .user__pic
                        img.user__pic-img(src='assets/images/content/user.jpg')
                    .user__description
                        .user__name Ковылин Николай
                        .user__info Личный сайт веб разработчика
                    .auth-block__socials
                        - 
                            var socials = [
                                ['vk', 'http://vk.com'],
                                ['github', 'http://gh.com'],
                                ['in', 'http://in.com']
                            ]
                        +socials(socials, 'socials_fill_green')
                nav.menu.auth-menu
                    ul.menu__list
                        li.menu__item
                            a.menu__link(href='#') Мои работы
                        li.menu__item
                            a.menu__link(href='#') Обо мне
                        li.menu__item
                            a.menu__link(href='#') Блог

            .copyright
                .copyright__text © Ковылин Николай | создано с любовью в LoftSchool | 2018