    .about__right
      .about__triangle
        svg(viewbox="0 0 1000 160", preserveaspectratio="none").triangle.triangle_fill_beige
          polygon(class="right", points="1000,0   1000,160   0,160   0,150")

      .about__right-title
        .block-subtitle.lr Чем я могу быть вам полезен
      .about__right-description.text-content
        p Lorem ipsum dolor sit amet consectetur adipisicing elit. Iste velit mollitia nemo reprehenderit ipsam corrupti deleniti, blanditiis sit magni fuga eveniet hic sint illo? Quae harum voluptatem optio ipsum blanditiis. 
      .about__right-content
        - 
          var skills = [
            ['Frontend', [['HTML5', 30], ['CSS3', 50], ['javaScript $ jQuery', 70]]],
            ['Backend', [['PHP', 30], ['mySQL', 50], ['Node.js $ npm', 70], ['Mongo.db', 70]]],
            ['Workflow', [['Git', 30], ['Gulp', 50], ['Bower', 70]]],
          ]

        ul.skills-list
          each skillsrow in skills
            li.skills-list__item.skills-row
              .skills-row__title #{skillsrow[0]}
              ul.skills-row__list
                each skill in skillsrow[1]
                  li.skills-row__item
                    figure.skill(data-percents="70")
                      svg(viewBox="0 0 110 110" preserveAspectRatio="none").skill__figure
                        circle(cx="50%" cy="50%" r="45").skill__circle.skill__circle_under
                        circle(cx="50%" cy="50%" r="45",  transform="rotate(-90 55 55)").skill__circle.skill__circle_above


                      .skill__title #{skill[0]}
                  
  section.map
    .google-map
    .map__data
      .contacts
        h2.contacts__title
          .block-subtitle.lr Контакты
        address.contacts__data
          ul.contacts__list
            -
              var contacts = [
                ['skype', 'skype_kdn'],
                ['envelope', 'blblbl@gmail.com'],
                ['phone', '+7 909 987 56 19'],
                ['map_marker', 'Г. Москва ул. Пероваская 18']
              ]
            each item in contacts
              li.contacts__item.contacts-row
                .contacts-row.contacts__icon
                  +icon(`${item[0]}`, 'contacts__icon-img')
                .contacts-row.contacts__title #{item[1]}



