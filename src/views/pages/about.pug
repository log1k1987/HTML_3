extends ../main.layout.pug

block variables
  - var title = 'Обо мне';
  - var anotherClass = 'footer footer__about';

block scripts
  script(src='about.bundle.js')

block content
  section.hero
    .hero__socials
      -
        var socials = [
          ['vk', 'http://vk.com'],
          ['github', 'http://gh.com'],
          ['in', 'http://in.com']
        ]
      +socials(socials, 'socials_fill_white')

    .hero__menu
      a(href="#").hamburger-menu-btn
        .hamburger-menu-lines

    .hero__title
      .section-title
        img(src="", alt="").section-title__pic
      
      .user
        .user__pic
          img.user__pic-img(src='assets/images/content/user.jpg')
        .user__description
          .user__name Ковылин Николай
          .user__info Личный сайт веб разработчика

    a(href="").down-btn.hero__down-btns
      +icon('arrow_down', 'arrow-down')

  section.about
    .about__left
      .about__triangle
        svg(viewbox="0 0 1000 160", preserveaspectratio="none").triangle.triangle_fill_izibeige
          polygon(class="left", points="0,0   0,160   1000.8,160   1000.8,150")

      .about__left-title
        h2.block-title.lr Обо мне
      .about__left-content
        .user-description
          .user-description__image
            img.user-description__avatar(src='assets/images/content/user-full.jpg')
          .user-description__data
